<div class="container my-4">
    <div class="row justify-content-center text-center">
        <h1>Hello, {{username}}!</h1>
        <br>
        <h5 class="mt-3">
            Saved locations:
            <div id="saved-locations-display"></div>
        </h5>
        <h2>Your posts:</h2>
        {{> feed}}
    </div>
  </div>


<script>
  async function loadSavedLocations() {
    try {
      const response = await fetch('/api/saved-locations');
      if (response.ok) {
        const locations = await response.json();
        const displayContainer = document.getElementById('saved-locations-display');
        
        if (locations.length === 0) {
          displayContainer.innerHTML = '<div class="text-muted small">None</div>';
        } else {
          displayContainer.innerHTML = locations
            .map(location => `<div class="small">${location}</div>`)
            .join('');
        }
      } else {
        document.getElementById('saved-locations-display').innerHTML = 
          '<div class="text-muted small">None</div>';
      }
    } catch (err) {
      console.error('Error loading saved locations:', err);
      document.getElementById('saved-locations-display').innerHTML = 
        '<div class="text-muted small">None</div>';
    }
  }

  document.addEventListener('DOMContentLoaded', loadSavedLocations);
</script>